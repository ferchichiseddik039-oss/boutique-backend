# Configuration Backend Railway
# Copiez ce fichier vers .env et remplissez les valeurs

# Base de données MongoDB
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/boutique

# JWT Secret pour l'authentification
JWT_SECRET=your-super-secret-jwt-key-2024-change-this

# Environnement
NODE_ENV=production

# Port (Railway gère automatiquement)
PORT=3000

# CORS - URL du frontend Vercel
CORS_ORIGIN=https://frontend-vercel-1m52v3e0y-seddik-s-projects-c94a56ab.vercel.app

# URL de l'application (pour les emails, etc.)
APP_URL=https://votre-backend.railway.app

# Configuration Email (optionnel)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Configuration Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=uploads/products

# Configuration Sécurité
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100